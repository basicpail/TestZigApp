<Page
    x:Class="DegaussingTestZigApp.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DegaussingTestZigApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="800"
    d:DesignWidth="850"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Dashboard -->
        <Grid Grid.Column="0" x:Name="dashboardGrid" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!-- Top info card -->
            <Grid Grid.Row="0">
                <ui:Card Background="DarkSlateGray" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <ui:SymbolIcon Symbol="Info28" FontSize="18" FontWeight="Bold" Margin="0,0,5,0" />
                        <ui:TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Text="장비 연결 및 응답 상태 실시간 모니터링 대시보드" />
                    </StackPanel>
                </ui:Card>
            </Grid>

            <!-- Section title -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <StackPanel>
                    <!--<TextBlock Text="● 통신 모듈 테스트" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,15" />-->
                </StackPanel>
            </Grid>

            <!-- Main module cards -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Ethernet Module -->
                <Grid Grid.Column="0" Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <ui:Card>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="이더넷 통신 모듈 테스트" FontSize="14" FontWeight="SemiBold" />
                                    <ui:Button Content="통신설정" Width="100" Height="30" Margin="20,0,0,0"
                                        Click="OpenModbusUdpSettingDialog" />
                                    <Button Content="카운트 초기화" Command="{Binding ViewModel.ResetUdpRequestNumCommand}" Margin="15,0,10,0"/>
                                </StackPanel>

                                <ui:InfoBar Title="{Binding ViewModel.UdpInfoBarMessage}"
                                    Severity="{Binding ViewModel.UdpInfoBarSeverity}"
                                    IsOpen="{Binding ViewModel.IsInfoBarOpen}"
                                    IsClosable="False"
                                    FontSize="20"
                                    Margin="0,0,0,10" />

                                <Border CornerRadius="6"
                                    Background="#22111111"
                                    Padding="20"
                                    Margin="0,0,0,0"
                                    Height="300">
                                    <Grid>
                                        <!-- Error/Timeout 상태 표시 (Row 0) -->
                                        <!--<StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,10"
                                            Grid.Row="0">
                                            --><!-- Error --><!--
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <ui:SymbolIcon Symbol="Warning20" Foreground="Red" FontSize="32" FontWeight="Bold" Margin="0,0,6,0" />
                                                <TextBlock Text="Error"
                                                   Foreground="Red"
                                                   FontSize="20"
                                                   FontWeight="Light"
                                                   Margin="5,0,10,0"/>
                                                <TextBlock Text="{Binding ViewModel.UdpErrorCount}"
                                                   Foreground="Red"
                                                   FontSize="20"
                                                   FontWeight="Light"
                                                   Margin="5,0,20,0"/>
                                            </StackPanel>

                                            --><!-- Timeout --><!--
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <ui:SymbolIcon Symbol="Warning20" Foreground="Gold" FontSize="32" FontWeight="Bold" Margin="0,0,6,0" />
                                                <TextBlock Text="Timeout"
                                                   Foreground="Gold"
                                                   FontSize="20"
                                                   FontWeight="Light"
                                                   Margin="5,0,10,0"/>
                                                <TextBlock Text="{Binding ViewModel.UdpTimeOutCount}"
                                                   Foreground="Gold"
                                                   FontSize="20"
                                                   FontWeight="Light" />
                                            </StackPanel>
                                        </StackPanel>-->

                                        <!-- 중앙 수신값 (Row 1) -->
                                        <TextBlock Text="{Binding ViewModel.UDPRequestList[0].ResponseNum}"
                                           FontSize="80"
                                           FontWeight="Bold"
                                           Foreground="IndianRed"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Grid.Row="1" />
                                    </Grid>
                                </Border>

                            </StackPanel>
                        </ui:Card>
                    </Grid>
                </Grid>


                <!-- Serial Module -->
                <Grid Grid.Column="1" Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <ui:Card>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="시리얼 통신 모듈 테스트" Foreground="White" FontSize="14" FontWeight="SemiBold"  Margin="0,5,0,0"/>
                                    <ui:Button Content="통신설정" Width="100" Height="30" Margin="20,0,0,0"
                                               Click="OpenModbusRtuSettingDialog" />
                                    <Button Content="카운트 초기화" Command="{Binding ViewModel.ResetRtuResponseNumCommand}" Margin="15,0,10,0"/>
                                </StackPanel>


                                <ui:InfoBar Title="{Binding ViewModel.RtuInfoBarMessage}"
                                    Severity="{Binding ViewModel.RtuInfoBarSeverity}"
                                    IsOpen="{Binding ViewModel.IsInfoBarOpen}"
                                    IsClosable="False"
                                    FontSize="20"
                                    Margin="0,0,0,10" />


                                <Border CornerRadius="6"
                                        Background="#22111111"
                                        Padding="20"
                                        Margin="0,0,0,0"
                                        Height="300">
                                    <Grid>
                                        <!-- Error/Timeout 상태 표시 (Row 0) -->
                                        <!--<StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,10"
                                            Grid.Row="0">
                                            --><!-- Error --><!--
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <ui:SymbolIcon Symbol="Warning20" Foreground="Red" FontSize="32" FontWeight="Bold" Margin="0,0,6,0" />
                                                <TextBlock Text="Error"
                                                   Foreground="Red"
                                                   FontSize="20"
                                                   FontWeight="Light"
                                                   Margin="5,0,10,0"/>
                                                <TextBlock Text="{Binding ViewModel.RtuErrorCount}"
                                                   Foreground="Red"
                                                   FontSize="20"
                                                   FontWeight="Light"
                                                   Margin="5,0,20,0"/>
                                            </StackPanel>

                                            --><!-- Timeout --><!--
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <ui:SymbolIcon Symbol="Warning20" Foreground="Gold" FontSize="32" FontWeight="Bold" Margin="0,0,6,0" />
                                                <TextBlock Text="Timeout"
                                                   Foreground="Gold"
                                                   FontSize="20"
                                                   FontWeight="Light"
                                                   Margin="5,0,10,0"/>
                                                <TextBlock Text="{Binding ViewModel.RtuTimeOutCount}"
                                                   Foreground="Gold"
                                                   FontSize="20"
                                                   FontWeight="Light" />
                                            </StackPanel>
                                        </StackPanel>-->

                                        <!-- 중앙 수신값 (Row 1) -->
                                        <TextBlock Text="{Binding ViewModel.RTUResponseList[0].ResponseNum}"
                                           FontSize="80"
                                           FontWeight="Bold"
                                           Foreground="IndianRed"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Grid.Row="1"/>
                                    </Grid>
                                </Border>


                                <!-- 테이블 헤더 -->
                                <!--<Border Background="#22111111"
                                    Padding="10"
                                    CornerRadius="3"
                                    SnapsToDevicePixels="True"
                                    BorderBrush="#22111111"
                                    BorderThickness="0,0,0,1">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="No"
                                            Grid.Column="0"
                                            FontWeight="SemiBold"
                                            FontSize="14"
                                            Foreground="#EEEEEE"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="10,0,0,0"/>

                                        <TextBlock Text="응답 시간"
                                            Grid.Column="1"
                                            FontWeight="SemiBold"
                                            FontSize="14"
                                            Foreground="#EEEEEE"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="10,0,0,0"/>

                                        <TextBlock Text="응답 데이터"
                                           Grid.Column="2"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="#EEEEEE"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                    </Grid>
                                </Border>-->



                                <!--<ItemsControl ItemsSource="{Binding ViewModel.RTUResponseList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="6" Padding="10" Margin="0,5" Background="#22111111">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="2*" />
                                                        <ColumnDefinition Width="1*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding ResponseNum}" Foreground="IndianRed" FontWeight="Bold" Grid.Column="0" FontSize="18" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Timestamp}" Foreground="IndianRed" FontWeight="Bold" Grid.Column="1" FontSize="18" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Value}" Foreground="IndianRed" FontWeight="Bold" Grid.Column="2" FontSize="18" HorizontalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>-->
                            </StackPanel>
                        </ui:Card>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="DialogOverlayHost"
            Background="Transparent" 
            Visibility="Collapsed"
            Panel.ZIndex="999"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <ContentPresenter x:Name="RootContentDialogPresenter"          
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                     />
        </Grid>
    </Grid>
</Page>
