<Page
    x:Class="DegaussingTestZigApp.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DegaussingTestZigApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="800"
    d:DesignWidth="850"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Dashboard -->
        <Grid Grid.Column="0" x:Name="dashboardGrid" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!-- Top info card -->
            <Grid Grid.Row="0">
                <ui:Card Background="DarkSlateGray" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <ui:SymbolIcon Symbol="Info28" FontSize="18" FontWeight="Bold" Margin="0,0,5,0" />
                        <ui:TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Text="테스트를 위한 임시 배포" />
                    </StackPanel>
                </ui:Card>
            </Grid>

            <!-- Section title -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <StackPanel>
                    <!--<TextBlock Text="● 통신 모듈 테스트" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,15" />-->
                </StackPanel>
            </Grid>

            <!-- Main module cards -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Ethernet Module -->
                <Grid Grid.Column="0" Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <ui:Card>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="이더넷 통신 모듈 테스트" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    <ui:Button Content="통신설정" Width="100" Height="30" Margin="20,0,0,0"
                                               Click="OpenModbusUdpSettingDialog" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <ui:InfoBar Title="{Binding ViewModel.UdpInfoBarMessage}"
                                       Severity="{Binding ViewModel.UdpInfoBarSeverity}"
                                       IsOpen="{Binding ViewModel.IsInfoBarOpen}"
                                       IsClosable="False"
                                       Margin="0,0,0,10" />
                                </StackPanel>

                                <ui:Card Margin="0,0,0,0">
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.UDPResponseList[0]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>

                                <ui:Card >
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.UDPResponseList[1]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>

                                <ui:Card>
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.UDPResponseList[2]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>

                                <ui:Card>
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.UDPResponseList[3]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>

                                <ui:Card>
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.UDPResponseList[4]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>
                            </StackPanel>
                        </ui:Card>
                    </Grid>
                </Grid>


                <!-- Serial Module -->
                <Grid Grid.Column="1" Margin="0,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <ui:Card>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="시리얼 통신 모듈 테스트" Foreground="White" FontSize="14" FontWeight="SemiBold"  Margin="0,5,0,0"/>
                                    <ui:Button Content="통신설정" Width="100" Height="30" Margin="20,0,0,0"
                                               Click="OpenModbusRtuSettingDialog" />
                                    <Button Content="Request" Command="{Binding ViewModel.ModbusRTURequestCommand}" Margin="15,0,10,0"/>
                                </StackPanel>
                                

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <ui:InfoBar Title="{Binding ViewModel.RtuInfoBarMessage}"
                                       Severity="{Binding ViewModel.RtuInfoBarSeverity}"
                                       IsOpen="{Binding ViewModel.IsInfoBarOpen}"
                                       IsClosable="False"
                                       Margin="0,0,0,10" />
                                    <!--<Button Content="Connect" Command="{Binding ViewModel.ModbusRTUConnectCommand}" Margin="0,0,10,0"/>
                                    <Button Content="Disconnect" Command="{Binding ViewModel.ModbusRTUDisconnectCommand}" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ViewModel.ModbusRTUstatusMessage}" Foreground="Green" Margin="0,5,10,0"/>-->
                                    
                                </StackPanel>


                                <ui:Card Margin="0,0,0,0">
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.RTUResponseList[0]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>

                                <ui:Card >
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.RTUResponseList[1]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>

                                <ui:Card>
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.RTUResponseList[2]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>

                                <ui:Card>
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.RTUResponseList[3]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>

                                <ui:Card>
                                    <ui:TextBlock>
                                        <Run Text="{Binding ViewModel.RTUResponseList[4]}" FontSize="20" FontWeight="Bold" Foreground="IndianRed" />
                                    </ui:TextBlock>
                                </ui:Card>
                            </StackPanel>
                        </ui:Card>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="DialogOverlayHost"
            Background="Transparent" 
            Visibility="Collapsed"
            Panel.ZIndex="999"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
                <ContentPresenter x:Name="RootContentDialogPresenter"          
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                     />
        </Grid>
    </Grid>
</Page>
