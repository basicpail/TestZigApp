<UserControl x:Class="DegaussingTestZigApp.Controls.ModbusUDPSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DataContext="{d:DesignInstance local:ModbusUDPSettingControl, IsDesignTimeCreatable=False}"
             xmlns:local="clr-namespace:DegaussingTestZigApp.Controls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="IP" Margin="0,10,0,0"/>
            <TextBox Text="{Binding ViewModel.Address}" Margin="0,10,0,0" />
            <TextBlock Text="Port" Margin="0,10,0,0"/>
            <TextBox Text="{Binding ViewModel.Port}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
